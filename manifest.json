{
	"manifest_version": 2,
	"name": "OPA Tools",
	"description": "Helping queridos to do a better job at Quero Education.",
  	"version": "0.0.1",

	"permissions":[
		"<all_urls>",
		"tabs",
        "identity",
        "identity.email"
	],

	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},

	"browser_action": {
   "default_title": "OPA Tools",
   "default_icon": "img/icon48.png",
    "default_popup": "popup.html"
  },


	 "content_scripts": [{
		 "matches": ["http://*/*", "https://*/*"],
        "js":      ["content.js"]
    }],
        
    "oauth2": {
        "client_id": "973513959897-u6ji4hoe980cj2cmclb9tohqehj86s0v.apps.googleusercontent.com",
        "scopes": ["https://www.google.com/m8/feeds", "https://www.googleapis.com/auth/userinfo.email"]   
    },
    
    "content_security_policy": "script-src 'self' https://www.googleapis.com; object-src 'self'",
     "key":""
    
}